@model IEnumerable<Saydalia_Online.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="mt-3 mb-3">Orders</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                @*   <th>
                @Html.DisplayNameFor(model => model.UserID)
                </th> *@
                <th>
                    Acctions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    @*   <td>
                @Html.DisplayFor(modelItem => item.UserID)
                </td> *@
                    <td>
                        <a asp-action="Details" asp-controller="Order" asp-route-Id="@item.Id" class="btn btn-primary">Details</a>
                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Pharmacist") || User.IsInRole("Admin")))
                        {
                            <a asp-action="Edit" asp-controller="Order" asp-route-Id="@item.Id" class="btn btn-primary">Edit</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


