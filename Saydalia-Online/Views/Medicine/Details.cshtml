@model Medicine
@{
    ViewData["Title"] = "ShopSingle";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/">Home</a> <span class="mx-2 mb-0">/</span> <a asp-action="Store" asp-controller="Home">Store</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">@Model.Name</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-5 mr-auto">
                <div class="border text-center">
                  @*  <img src="/images/@Model.ImageName" alt="Image" class="img-fluid p-5"> *@
                    <img src="~/files/images/@Model.ImageName" class="card-img-top img-fluid mb-3" style="max-height:300px; max-width:250px;" alt="@Model.Name">

                </div>
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-center">
                <h2 class="text-black">@Model.Name</h2>
                <p>
                    @Model.Description
                </p>


                <p><del>$95.00</del>  <strong class="text-primary h4">@Model.Price</strong></p>

                <div class="mb-5">
                    <div class="input-group mb-3" style="max-width: 220px;">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                        </div>
                        <input type="text" class="form-control text-center" value="1" placeholder=""
                               aria-label="Example text with button addon" aria-describedby="button-addon1">
                        <div class="input-group-append">
                            <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                        </div>
                    </div>

                </div>
                <p><a asp-action="Cart" asp-controller="Home" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary">Add To Cart</a></p>
            </div>
        </div>
    </div>
</div>

