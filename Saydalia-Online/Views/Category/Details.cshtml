@model Category
@{
    ViewData["Title"] = "ShopSingle";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/">Home</a> <span class="mx-2 mb-0">/</span> <a asp-action="Store" asp-controller="Home">Store</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">@Model.Name</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row align-items-center">
            
                @**********************************category products***************************************@
                <div class="row">
                    @if (Model.Medicines != null)
                    {
                        @foreach (var medicine in Model.Medicines)
                        {
                            <div class="col-sm-6 col-lg-4 text-center item mb-4">
                                <span class="tag">Sale</span>
                                <a asp-action="Details" asp-controller="Medicine" asp-route-id="@medicine.Id">
                                    @* <img src="~/images/@medicine.ImageName" alt="@medicine.Name" /> *@
                                    <img src="~/files/images/@medicine.ImageName" class="card-img-top img-fluid mb-3" style="max-height:300px; max-width:250px;" alt="@medicine.Name">

                                </a>
                                <h3 class="text-dark"><a asp-action="Details" asp-controller="Medicine" asp-route-id="@medicine.Id">@medicine.Name</a></h3>
                                <p class="price"><del>$95.00</del> &mdash; $@medicine.Price</p>

@*                                 <div class="mb-5">
                                    <div class="input-group mb-3" style="max-width: 220px;">
                                        <div class="input-group-prepend">
                                            <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                                        </div>
                                        <input type="text" class="form-control text-center" value="1" placeholder=""
                                               aria-label="Example text with button addon" aria-describedby="button-addon1">
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                                        </div>
                                    </div>

                                </div> *@
                                <p><a asp-action="Cart" asp-controller="Home" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary">Add To Cart</a></p>
                            </div>

                        }
                    }
                </div>
            
        </div>
    </div>
</div>

